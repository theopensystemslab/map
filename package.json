{
  "name": "@opensystemslab/map",
  "version": "0.5.7",
  "license": "OGL-UK-3.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/theopensystemslab/map.git"
  },
  "browser": "./dist/component-lib.umd.js",
  "module": "./dist/component-lib.es.js",
  "exports": "./dist/component-lib.es.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist types && tsc && vite build && sed 's/src=\".*\"/src=\"component-lib.es.js\"/' index.html > dist/index.html",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "docs": "NODE_ENV=development pitsby build --watch --port=7007",
    "docsPublish": "pitsby build"
  },
  "dependencies": {
    "@turf/union": "^6.5.0",
    "accessible-autocomplete": "^2.0.4",
    "govuk-frontend": "^4.3.0",
    "lit": "^2.3.0",
    "ol": "^6.15.1",
    "ol-mapbox-style": "^8.2.1",
    "postcode": "^5.1.0",
    "rambda": "^7.2.1"
  },
  "devDependencies": {
    "@glorious/pitsby": "^1.31.0",
    "@testing-library/dom": "^8.17.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.7.3",
    "@vitest/ui": "^0.21.1",
    "happy-dom": "^6.0.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rollup-plugin-postcss-lit": "^2.0.0",
    "sass": "^1.54.4",
    "typescript": "^4.7.4",
    "vite": "^3.0.7",
    "vitest": "0.21.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md,html}": "prettier --write"
  },
  "stackblitz": {
    "startCommand": "npm run test:ui"
  }
}
