{
  "name": "@opensystemslab/map",
  "version": "1.0.0-alpha.6",
  "license": "MPL-2.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/theopensystemslab/map.git"
  },
  "browser": "./dist/component-lib.umd.js",
  "module": "./dist/component-lib.es.js",
  "exports": "./dist/component-lib.es.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist types && tsc && vite build && sed 's/src=\".*\"/src=\"component-lib.es.js\"/' index.html > dist/index.html",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "docs": "NODE_ENV=development pitsby build --watch --port=7007",
    "docsPublish": "pitsby build"
  },
  "dependencies": {
    "@turf/helpers": "^7.2.0",
    "@turf/union": "^7.1.0",
    "@types/geojson": "^7946.0.14",
    "accessible-autocomplete": "^3.0.1",
    "file-saver": "^2.0.5",
    "govuk-frontend": "^5.11.0",
    "jspdf": "^3.0.1",
    "lit": "^3.0.1",
    "ol": "^10.6.1",
    "ol-ext": "^4.0.24",
    "ol-mapbox-style": "^12.6.0",
    "postcode": "^5.1.0",
    "proj4": "^2.19.5",
    "rambda": "^10.2.0"
  },
  "devDependencies": {
    "@glorious/pitsby": "^1.37.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/file-saver": "^2.0.7",
    "@types/node": "22.0.3",
    "@types/ol-ext": "npm:@siedlerchr/types-ol-ext@^3.6.1",
    "@types/proj4": "^2.5.6",
    "@vitest/ui": "^3.0.7",
    "happy-dom": "^9.1.9",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "rollup-plugin-postcss-lit": "^2.1.0",
    "sass": "^1.89.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.4",
    "vitest": "3.0.7",
    "wait-for-expect": "^3.0.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md,html}": "prettier --write"
  },
  "stackblitz": {
    "startCommand": "npm run test:ui"
  },
  "packageManager": "pnpm@8.6.6",
  "pnpm": {
    "overrides": {
      "braces@<3.0.3": ">=3.0.3"
    }
  }
}
